{
  "compilerOptions": {
    "lib": ["ES5", "dom"],
    "target": "ES5",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "inlineSourceMap": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts", "**/tests/**"]
}
